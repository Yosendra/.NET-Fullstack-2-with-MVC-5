@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<main>
    <div class="row">

        <h1>My Upcoming Gigs</h1>
        <ul class="gigs voffset-4">
            @foreach (var gig in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">@gig.DateTime.ToString("MMM")</div>
                        <div class="day">@gig.DateTime.ToString("d ")</div>
                    </div>
                    <div class="details">
                        <span class="artist">
                            @gig.Venue
                        </span>
                        <span class="genre">
                            @gig.Genre.Name
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>
</main>

